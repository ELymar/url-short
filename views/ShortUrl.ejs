<div class="row mt-5">
    <div class="col-md-6 m-auto">
        <div class="card card-body">
            <h1 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i> URL Shortener </h1>
            <form action="/url" method="POST">
                <div class="form-group">
                    <label for="text">URL</label>
                    <input type="text" id="url" name="url" class="form-control" placeholder="Enter URL" />
                </div>
                <button type="submit" class="btn btn-primary btn-block">Shorten</button>
            </form>
            <% if(url != undefined) { %>
            <br />
            <div class="form-group">
                <input type=text id="short-url" class=form-control readonly="readonly" value="<%= url %>"> </input>
            </div>
            <button onclick="copyLink()" class="btn btn-primary btn-block">Copy Link</button>
            <script>
                function copyLink() {
                    var copyText = document.getElementById("short-url");
                    copyText.select();
                    document.execCommand("copy");
                    alert("Copied the text: " + copyText.value);
                }
            </script>
            <% } %>
        </div>
    </div>
</div>